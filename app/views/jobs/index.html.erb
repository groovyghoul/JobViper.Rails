<div class="min-h-screen bg-[#F8FAFC] p-8 md:p-12">
  <div class="max-w-7xl mx-auto">

    <%# Header Section %>
    <div
      class="
        flex flex-col md:flex-row justify-between items-start md:items-center mb-10
        gap-6
      "
    >
      <div class="flex items-center gap-4">
        <div
          class="
            w-12 h-12 bg-[#0F172A] rounded-2xl flex items-center justify-center shadow-xl
            shadow-slate-200
          "
        >
          <%= icon_logo(width: 24, height: 24, stroke: "white", stroke_width: 3) %>
        </div>
        <div>
          <h1 class="text-4xl font-black text-[#0F172A] tracking-tight">JobViper</h1>
          <p class="text-[#64748B] font-medium">Tracking
            <%= pluralize(@jobs.count, "active opportunity") %></p>
        </div>
      </div>

      <div class="flex items-center gap-4 w-full md:w-auto">
        <div class="flex items-center gap-6">
          <%# Hide Rejected Toggle %>
          <div class="flex items-center gap-2">
            <% if params[:filter] == 'hide_rejected' %>
              <%= link_to jobs_path(view: params[:view]), 
          class: "flex items-center gap-2 text-sm font-bold text-blue-600 bg-blue-50 px-4 py-2 rounded-xl border border-blue-100 transition-all" do %>
                <%= icon_eye(width: 16, height: 16, stroke_width: 2.5) %>
                Showing Active
              <% end %>
            <% else %>
              <%= link_to jobs_path(view: params[:view], filter: 'hide_rejected'), 
          class: "flex items-center gap-2 text-sm font-bold text-[#64748B] hover:text-[#0F172A] bg-white border border-[#E2E8F0] px-4 py-2 rounded-xl shadow-sm transition-all" do %>
                <%= icon_eye_off(width: 16, height: 16, stroke_width: 2) %>
                Hide Rejected
              <% end %>
            <% end %>
          </div>

          <div class="flex items-center gap-2">
            <%= link_to report_jobs_path, class: "flex items-center gap-2 px-4 py-2 rounded-lg border border-slate-300 hover:bg-slate-50 transition-all text-sm font-semibold text-slate-700" do %>
              <%= icon_report(classes: "text-slate-600") %>
              Report
            <% end %>
          </div>

          <%# Grid/List Toggle Buttons %>
          <div class="flex bg-white border border-[#E2E8F0] rounded-xl p-1 shadow-sm">
            <%= link_to jobs_path(view: 'grid', filter: params[:filter]), 
        class: "p-2.5 rounded-lg transition-all #{params[:view] != 'list' ? 'bg-[#F1F5F9] text-[#0F172A]' : 'text-[#94A3B8] hover:text-[#64748B]'}" do %>
              <%= icon_grid(width: 20, height: 20, stroke_width: 2) %>
            <% end %>

            <%= link_to jobs_path(view: 'list', filter: params[:filter]), 
        class: "p-2.5 rounded-lg transition-all #{params[:view] == 'list' ? 'bg-[#F1F5F9] text-[#0F172A]' : 'text-[#94A3B8] hover:text-[#64748B]'}" do %>
              <%= icon_list(width: 20, height: 20, stroke_width: 2) %>
            <% end %>
          </div>
        </div>

        <%= link_to new_job_path, class: "flex-grow md:flex-grow-0 bg-[#020617] text-white px-6 py-3 rounded-xl font-bold flex items-center justify-center gap-2 hover:bg-black transition-all shadow-lg shadow-slate-200" do %>
          <span class="text-xl font-light">+</span>
          New Application
        <% end %>
      </div>
    </div>

    <% if params[:view] == 'list' %>
      <%# List View (Table) %>
      <div
        class="
          bg-white border border-[#F1F5F9] rounded-[24px] overflow-hidden shadow-sm
        "
      >
        <table class="w-full text-left border-collapse">
          <thead class="bg-[#F8FAFC] border-b border-[#F1F5F9]">
            <tr>
              <th class="p-6 font-bold text-[#0F172A] text-sm uppercase tracking-wider">Position</th>
              <th class="p-6 font-bold text-[#0F172A] text-sm uppercase tracking-wider">Status</th>
              <th class="p-6 font-bold text-[#0F172A] text-sm uppercase tracking-wider">Contacts</th>
              <th class="p-6 font-bold text-[#0F172A] text-sm uppercase tracking-wider">Events</th>
              <th class="p-6 font-bold text-[#0F172A] text-sm uppercase tracking-wider">Applied</th>
            </tr>
          </thead>
          <tbody class="divide-y divide-[#F1F5F9]">
            <% @jobs.each do |job| %>
              <tr
                class="
                  hover:bg-[#F8FAFC] transition-colors cursor-pointer group
                "
                onclick="window.location='<%= job_path(job) %>'"
              >
                <td class="p-6">
                  <div
                    class="
                      font-bold text-[#0F172A] group-hover:text-blue-600 transition-colors
                    "
                  ><%= job.title %></div>
                  <div class="text-sm text-[#64748B] font-medium"><%= job.company %></div>
                </td>
                <td class="p-6">
                  <span
                    class="
                      text-[10px] font-black uppercase tracking-widest px-3 py-1.5 rounded-lg
                      <%= case job.status.downcase
                        when 'offered', 'accepted' then 'bg-emerald-100 text-emerald-700'
                        when 'rejected', 'declined' then 'bg-rose-100 text-rose-700'
                        when 'interviewing' then 'bg-amber-100 text-amber-700'
                        else 'bg-blue-100 text-blue-700'
                        end %>
                    "
                  >
                    <%= job.status %>
                  </span>
                </td>
                <td class="p-6 text-[#64748B]">
                  <div class="flex items-center gap-2">
                    <div
                      class="
                        w-8 h-8 rounded-full bg-slate-100 flex items-center justify-center text-xs
                        font-bold text-slate-500
                      "
                    >
                      <%= job.contacts.count %>
                    </div>
                  </div>
                </td>
                <td class="p-6 text-[#64748B]">
                  <div class="flex items-center gap-2">
                    <div
                      class="
                        w-8 h-8 rounded-full bg-slate-100 flex items-center justify-center text-xs
                        font-bold text-slate-500
                      "
                    >
                      <%= job.events.count %>
                    </div>
                  </div>
                </td>
                <td class="p-6 text-[#94A3B8] text-sm font-medium">
                  <%= time_ago_in_words(job.applied_date) %>
                  ago
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>

    <% else %>
      <%# Grid View %>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        <% @jobs.each do |job| %>
          <%= link_to job, class: "bg-white border border-[#F1F5F9] rounded-[32px] p-8 shadow-sm hover:shadow-xl hover:border-blue-100 transition-all group flex flex-col h-full" do %>

            <div class="flex justify-between items-start mb-6">
              <span
                class="
                  text-[10px] font-black uppercase tracking-widest px-3 py-1 rounded-full
                  <%= case job.status.downcase
                    when 'offered', 'accepted' then 'bg-emerald-100 text-emerald-700'
                    when 'rejected', 'declined' then 'bg-rose-100 text-rose-700'
                    when 'interviewing' then 'bg-amber-100 text-amber-700'
                    else 'bg-blue-100 text-blue-700'
                    end %>
                "
              >
                <%= job.status %>
              </span>
              <div class="text-[#94A3B8] text-[11px] font-bold uppercase tracking-tight">
                <%= job.applied_date.strftime("%b %d") %>
              </div>
            </div>

            <div class="flex-grow mb-8">
              <h3
                class="
                  text-2xl font-bold text-[#0F172A] leading-tight group-hover:text-blue-600
                  transition-colors
                "
              ><%= job.title %></h3>
              <p class="text-[#64748B] text-lg mt-1 font-medium"><%= job.company %></p>

              <div class="mt-6 flex items-center gap-2 text-[#94A3B8]">
                <%= icon_pin(width: 16, height: 16, stroke_width: 2) %>
                <span class="text-sm font-medium"><%= job.location %></span>
              </div>
            </div>

            <%# Card Footer Stats %>
            <div
              class="
                pt-6 border-t border-slate-50 flex justify-between items-center mt-auto
              "
            >
              <div class="flex gap-4">
                <div class="flex items-center gap-1.5" title="Contacts">
                  <%= icon_user(width: 16, height: 16, stroke: "#94A3B8", stroke_width: 2) %>
                  <span class="font-bold text-[#475569] text-sm"><%= job.contacts.count %></span>
                </div>
                <div class="flex items-center gap-1.5" title="Events">
                  <%= icon_clock(width: 16, height: 16, stroke: "#94A3B8", stroke_width: 2) %>
                  <span class="font-bold text-[#475569] text-sm"><%= job.events.count %></span>
                </div>
              </div>
              <%= icon_chevron_right(width: 20, height: 20, stroke_width: 2, classes: "text-slate-200 group-hover:text-blue-500 group-hover:translate-x-1 transition-all") %>
            </div>
          <% end %>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
