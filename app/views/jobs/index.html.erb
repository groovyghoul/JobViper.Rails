<% content_for :title, "Jobs" %>

<div class="w-full">
  <% if notice.present? %>
    <p
      class="
        py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-md inline-block
      "
      id="notice"
    ><%= notice %></p>
  <% end %>

  <div class="grid grid-cols-1 sm:grid-cols-4 gap-4 mb-8">
    <div class="bg-white p-5 rounded-xl shadow-sm border border-gray-100">
      <p class="text-sm font-medium text-gray-500 uppercase tracking-wider">Total Applied</p>
      <p class="text-2xl font-bold text-gray-900"><%= @total_count %></p>
    </div>

    <div class="bg-white p-5 rounded-xl shadow-sm border border-gray-100">
      <p class="text-sm font-medium text-indigo-500 uppercase tracking-wider">Interviewing</p>
      <p class="text-2xl font-bold text-gray-900"><%= @interviewing_count %></p>
    </div>

    <div class="bg-white p-5 rounded-xl shadow-sm border border-gray-100">
      <p class="text-sm font-medium text-green-500 uppercase tracking-wider">Offers</p>
      <p class="text-2xl font-bold text-gray-900"><%= @offers_count %></p>
    </div>

    <div class="bg-white p-5 rounded-xl shadow-sm border border-gray-100">
      <p class="text-sm font-medium text-blue-500 uppercase tracking-wider">Offer Rate</p>
      <p class="text-2xl font-bold text-gray-900"><%= @success_rate %>%</p>
    </div>
  </div>

  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">Jobs</h1>
    <%= link_to "New job",
    new_job_path,
    class:
      "rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white block font-medium" %>
  </div>

  <div class="overflow-x-auto rounded-lg border border-gray-200 shadow-sm mt-8">
    <table class="min-w-full divide-y divide-gray-200 bg-white text-sm">
      <thead class="bg-gray-50 text-left">
        <tr>
          <th class="px-4 py-3 font-semibold text-gray-900">Company</th>
          <th class="px-4 py-3 font-semibold text-gray-900">Title</th>
          <th class="px-4 py-3 font-semibold text-gray-900">Status</th>
          <th class="px-4 py-3 font-semibold text-gray-900">Applied Date</th>
          <th class="px-4 py-3"></th>
        </tr>
      </thead>

      <tbody class="divide-y divide-gray-200">
        <% @jobs.each do |job| %>
          <tr>
            <td class="px-4 py-3 font-medium text-gray-900"><%= job.company %></td>
            <td class="px-4 py-3 text-gray-700"><%= job.title %></td>
            <td class="px-4 py-3">
              <span
                class="
                  px-2 py-0.5 rounded-full text-xs font-medium bg-blue-50 text-blue-600 border
                  border-blue-100
                "
              >
                <%= job.status %>
              </span>
            </td>
            <td class="px-4 py-3 text-gray-500"><%= job.applied_date.strftime("%b %d, %Y") %></td>
            <td class="px-4 py-3 text-right">
              <%= link_to "View", job, class: "text-indigo-600 hover:text-indigo-900 font-medium" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
