<% content_for :title, "Editing job" %>

<div class="min-h-screen bg-[#F8FAFC] p-10">
  <div
    class="
      max-w-4xl mx-auto bg-white rounded-[24px] shadow-sm border border-[#F1F5F9] p-10
    "
  >

    <%# Header with Back Arrow %>
    <div class="flex justify-between items-center mb-10">
      <div class="flex items-center gap-4">
        <%= link_to job_path(@job), class: "text-[#64748B] hover:text-[#0F172A] transition-all" do %>
          <%= icon_back(width: 24, height: 24, stroke_width: 2.5) %>
        <% end %>
        <h1 class="text-4xl font-bold text-[#0F172A]">Editing Application</h1>
      </div>

      <%# Optional: Delete button in header like many modern apps %>
      <%= button_to @job, method: :delete, form: { data: { turbo_confirm: "Are you sure?" } }, class: "text-red-500 hover:text-red-700 p-2" do %>
        <%= icon_trash_full(width: 20, height: 20, stroke_width: 2) %>
      <% end %>
    </div>

    <%= render "form", job: @job %>

    <%# Removed the "Show this job" and "Back to jobs" buttons that were clashing %>
  </div>
</div>
