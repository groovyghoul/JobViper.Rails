<% content_for :title, "Editing job" %>

<div class="min-h-screen bg-[#F8FAFC] p-10">
  <div
    class="
      max-w-4xl mx-auto bg-white rounded-[24px] shadow-sm border border-[#F1F5F9] p-10
    "
  >

    <%# Header with Back Arrow %>
    <div class="flex justify-between items-center mb-10">
      <div class="flex items-center gap-4">
        <%= link_to job_path(@job), class: "text-[#64748B] hover:text-[#0F172A] transition-all" do %>
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="24"
            height="24"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2.5"
            stroke-linecap="round"
            stroke-linejoin="round"
          ><line x1="19" y1="12" x2="5" y2="12"/><polyline points="12 19 5 12 12 5"/></svg>
        <% end %>
        <h1 class="text-4xl font-bold text-[#0F172A]">Editing Application</h1>
      </div>

      <%# Optional: Delete button in header like many modern apps %>
      <%= button_to @job, method: :delete, form: { data: { turbo_confirm: "Are you sure?" } }, class: "text-red-500 hover:text-red-700 p-2" do %>
        <svg
          xmlns="http://www.w3.org/2000/svg"
          width="20"
          height="20"
          viewBox="0 0 24 24"
          fill="none"
          stroke="currentColor"
          stroke-width="2"
          stroke-linecap="round"
          stroke-linejoin="round"
        ><path d="M3 6h18"/><path d="M19 6v14c0 1-1 2-2 2H7c-1 0-2-1-2-2V6"/><path d="M8 6V4c0-1 1-2 2-2h4c1 0 2 1 2 2v2"/><line x1="10" y1="11" x2="10" y2="17"/><line x1="14" y1="11" x2="14" y2="17"/></svg>
      <% end %>
    </div>

    <%= render "form", job: @job %>

    <%# Removed the "Show this job" and "Back to jobs" buttons that were clashing %>
  </div>
</div>
