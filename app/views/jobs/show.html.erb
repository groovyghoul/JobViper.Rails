<div class="max-w-6xl mx-auto p-6">
  <%# Top Job Info Card %>
  <div class="bg-white rounded-2xl border border-gray-100 p-8 shadow-sm mb-8 relative">
    <%= link_to "Edit", edit_job_path(@job), class: "absolute top-6 right-6 border border-gray-200 px-4 py-2 rounded-lg flex items-center gap-2 hover:bg-gray-50" %>

    <div class="flex items-center gap-3 mb-2">
      <h1 class="text-3xl font-bold"><%= @job.company %></h1>
      <span class="bg-blue-600 text-white text-xs px-3 py-1 rounded-md capitalize"><%= @job.status %></span>
    </div>
    <p class="text-gray-500 mb-6"><%= @job.title %></p>

    <div class="flex gap-12 text-gray-600 text-sm">
      <span class="flex items-center gap-2">ğŸ“ <%= @job.location %></span>
      <span class="flex items-center gap-2">ğŸ“… Applied <%= @job.applied_date %></span>
    </div>
  </div>

  <%# Bottom Grid %>
  <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
    <%# Contacts Section %>
    <section>
      <div class="flex justify-between items-center mb-4">
        <h2 class="text-2xl font-bold">Contacts</h2>
        <%= link_to "+ Add Contact", new_contact_path(job_id: @job.id), class: "bg-black text-white px-4 py-2 rounded-lg text-sm" %>
      </div>
      <% @job.contacts.each do |contact| %>
        <div class="bg-white p-6 rounded-xl border border-gray-100 mb-4 shadow-sm">
          <h3 class="font-bold text-gray-900"><%= contact.person %></h3>
          <p class="text-sm text-gray-500"><%= contact.notes %></p>
          <p class="text-xs text-blue-600 mt-2">âœ‰ <%= contact.email %></p>
        </div>
      <% end %>
    </section>

    <%# Timeline Section %>
    <section>
      <div class="flex justify-between items-center mb-4">
        <h2 class="text-2xl font-bold">Timeline & Results</h2>
        <%= link_to "+ Add Event", new_result_path(job_id: @job.id), class: "bg-black text-white px-4 py-2 rounded-lg text-sm" %>
      </div>
      <div class="relative border-l-2 border-gray-100 ml-4 pl-8 space-y-8">
        <% @job.results.each do |result| %>
          <div class="relative">
            <div class="absolute -left-[41px] bg-blue-100 p-2 rounded-lg text-blue-600">ğŸ“…</div>
            <h3 class="font-bold"><%= result.status %></h3>
            <p class="text-xs text-gray-400"><%= result.date %></p>
            <p class="text-sm text-gray-600 mt-1"><%= result.notes %></p>
          </div>
        <% end %>
      </div>
    </section>
  </div>
</div>
