<div class="max-w-4xl mx-auto mt-10 px-4">
  <div class="flex justify-between items-center border-b pb-4 mb-6">
    <div>
      <h1 class="text-3xl font-bold text-gray-900"><%= @job.title %></h1>
      <p class="text-lg text-gray-600"><%= @job.company %></p>
    </div>
    <span
      class="
        px-3 py-1 rounded-full text-sm font-semibold bg-blue-100 text-blue-800
      "
    >
      <%= @job.status %>
    </span>
  </div>

  <div class="grid grid-cols-1 md:grid-cols-2 gap-8">

    <section class="bg-white p-6 rounded-lg shadow-sm border">
      <h2 class="text-xl font-semibold mb-4 text-indigo-700">Contact History</h2>
      <% @job.contacts.each do |contact| %>
        <div class="mb-4 pb-2 border-b last:border-0">
          <p class="font-medium"><%= contact.person %>
            (<%= contact.contact_type %>)</p>
          <p class="text-sm text-gray-500"><%= contact.date.strftime("%b %d, %Y") %></p>
          <p class="text-sm italic mt-1 text-gray-700">"<%= contact.notes %>"</p>
        </div>
      <% end %>
      <%= link_to "+ Add Contact",
      new_contact_path(job_id: @job.id),
      class: "text-sm text-indigo-600 hover:underline" %>
    </section>

    <section class="bg-white p-6 rounded-lg shadow-sm border">
      <h2 class="text-xl font-semibold mb-4 text-green-700">Status Updates</h2>
      <% @job.results.each do |result| %>
        <div class="mb-4 pb-2 border-b last:border-0">
          <p class="font-medium text-gray-800"><%= result.status %></p>
          <p class="text-sm text-gray-500"><%= result.date.strftime("%b %d, %Y") %></p>
          <p class="text-sm mt-1 text-gray-600"><%= result.notes %></p>
        </div>
      <% end %>
      <%= link_to "+ Add Result",
      new_result_path(job_id: @job.id),
      class: "text-sm text-green-600 hover:underline" %>
    </section>

  </div>

  <div class="mt-8 flex gap-4">
    <%= link_to "Edit Job",
    edit_job_path(@job),
    class: "rounded-lg py-3 px-5 bg-gray-100 font-medium" %>
    <%= link_to "Back to Jobs",
    jobs_path,
    class: "rounded-lg py-3 px-5 bg-gray-100 font-medium" %>
  </div>
</div>
