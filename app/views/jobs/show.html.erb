<div class="min-h-screen bg-[#F8FAFC] p-8 md:p-12">
  <div class="max-w-7xl mx-auto">
    <%# Back Navigation %>
    <%= link_to jobs_path, class: "flex items-center gap-2 text-[#64748B] hover:text-[#0F172A] mb-6 transition-all group" do %>
      <svg
        xmlns="http://www.w3.org/2000/svg"
        width="20"
        height="20"
        viewBox="0 0 24 24"
        fill="none"
        stroke="currentColor"
        stroke-width="2.5"
        stroke-linecap="round"
        stroke-linejoin="round"
        class="group-hover:-translate-x-1 transition-transform"
      ><line x1="19" y1="12" x2="5" y2="12"/><polyline points="12 19 5 12 12 5"/></svg>
      <span class="text-2xl font-bold text-[#0F172A]">Job Application Details</span>
    <% end %>

    <%# Main Info Card %>
    <div
      class="
        bg-white border border-[#F1F5F9] rounded-[24px] p-10 mb-8 shadow-sm relative
      "
    >
      <div class="flex justify-between items-start">
        <div>
          <div class="flex items-center gap-3 mb-2">
            <h2 class="text-3xl font-bold text-[#0F172A]"><%= @job.title %></h2>
            <span
              class="
                bg-[#3B82F6] text-white text-[10px] font-black uppercase tracking-wider px-3
                py-1 rounded-lg
              "
            >
              <%= @job.status %>
            </span>
          </div>
          <p class="text-xl text-[#64748B] mb-8"><%= @job.company %></p>
          <div class="grid grid-cols-1 md:grid-cols-3 gap-y-6 gap-x-8 text-[#64748B]">
            <div class="flex items-center gap-3">
              <svg
                xmlns="http://www.w3.org/2000/svg"
                width="20"
                height="20"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
                stroke-linecap="round"
                stroke-linejoin="round"
                class="text-[#94A3B8]"
              ><path d="M20 10c0 6-8 12-8 12s-8-6-8-12a8 8 0 0 1 16 0Z"/><circle cx="12" cy="10" r="3"/></svg>
              <span><%= @job.location %></span>
            </div>
            <div class="flex items-center gap-3">
              <svg
                xmlns="http://www.w3.org/2000/svg"
                width="20"
                height="20"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
                stroke-linecap="round"
                stroke-linejoin="round"
                class="text-[#94A3B8]"
              ><rect width="18" height="18" x="3" y="4" rx="2" ry="2"/><line x1="16" x1="16" y1="2" y2="6"/><line x1="8" x1="8" y1="2" y2="6"/><line x1="3" x1="10" y1="10" y2="10"/></svg>
              <span>Applied
                <%= @job.applied_date.strftime("%Y-%m-%d") %></span>
            </div>
            <div class="flex items-center gap-3">
              <svg
                xmlns="http://www.w3.org/2000/svg"
                width="20"
                height="20"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
                stroke-linecap="round"
                stroke-linejoin="round"
                class="text-[#94A3B8]"
              ><line x1="12" x1="12" y1="2" y2="22"/><path d="M17 5H9.5a3.5 3.5 0 0 0 0 7h5a3.5 3.5 0 0 1 0 7H6"/></svg>
              <span class="font-semibold text-[#475569]"><%= @job.salary.present? ? @job.salary : "Not specified" %></span>
            </div>
          </div>
          <div class="mt-8">
            <h4 class="flex items-center gap-2 text-[#0F172A] font-bold mb-3 italic">Description</h4>
            <p class="text-[#64748B] leading-relaxed"><%= @job.description %></p>
          </div>
        </div>
        <%= link_to edit_job_path(@job), class: "bg-[#0F172A] text-white px-4 py-2 rounded-xl text-sm font-bold" do %>Edit<% end %>
      </div>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
      <%# Contacts Column %>
      <div class="bg-white border border-[#F1F5F9] rounded-[24px] p-8 shadow-sm">
        <div class="flex justify-between items-center mb-8">
          <h3 class="text-2xl font-bold text-[#0F172A]">Contacts</h3>
          <%= link_to new_job_contact_path(@job), data: { turbo_frame: "modal" }, class: "bg-black text-white px-4 py-2 rounded-xl text-sm font-bold" do %>
            + Add Contact
          <% end %>
        </div>

        <div class="space-y-4">
          <% if @job.contacts.any? %>
            <% @job.contacts.each do |contact| %>
              <div class="border border-[#F1F5F9] rounded-2xl p-6 relative group">
                <p class="font-bold text-[#0F172A]"><%= contact.name %></p>
                <p class="text-sm text-[#64748B]"><%= contact.role %></p>
                <p class="text-sm text-[#94A3B8] mt-2 italic"><%= contact.email %></p>
              </div>
            <% end %>
          <% else %>
            <p class="text-center text-gray-400 py-4 italic">No contacts yet.</p>
          <% end %>
        </div>
      </div>

      <%# Timeline Placeholder %>
      <div
        class="
          bg-white border border-[#F1F5F9] rounded-[24px] p-8 shadow-sm text-center italic
          text-gray-400
        "
      >
        Timeline logic coming next!
      </div>
    </div>
  </div>
</div>
