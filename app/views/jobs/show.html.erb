<div class="min-h-screen bg-[#F8FAFC] p-8 md:p-12">
  <div class="max-w-7xl mx-auto">
    <%# Back Navigation %>
    <%= link_to jobs_path, class: "flex items-center gap-2 text-[#64748B] hover:text-[#0F172A] mb-6 transition-all group" do %>
      <%= icon_back(width: 20, height: 20, stroke_width: 2.5, classes: "group-hover:-translate-x-1 transition-transform") %>
      <span class="text-2xl font-bold text-[#0F172A]">Job Application Details</span>
    <% end %>

    <%# Main Info Card %>
    <div
      class="
        bg-white border border-[#F1F5F9] rounded-[24px] p-10 mb-8 shadow-sm relative
      "
    >
      <div class="flex justify-between items-start gap-3">
        <div class="flex-grow">
          <div class="flex items-center gap-4 mb-2">
            <h2 class="text-3xl font-bold text-[#0F172A]"><%= @job.title %></h2>
            <%# Polished Dynamic Badge %>
            <span
              class="
                text-[10px] font-black uppercase tracking-widest px-3 py-1.5 rounded-lg
                <%= case @job.status.downcase
                  when 'offered', 'accepted' then 'bg-emerald-100 text-emerald-700'
                  when 'rejected', 'declined' then 'bg-rose-100 text-rose-700'
                  when 'interviewing' then 'bg-amber-100 text-amber-700'
                  else 'bg-blue-100 text-blue-700'
                  end %>
              "
            >
              <%= @job.status %>
            </span>
          </div>
          <p class="text-xl text-[#64748B] mb-8 font-medium"><%= @job.company %></p>

          <div class="grid grid-cols-1 md:grid-cols-3 gap-y-6 gap-x-8 text-[#64748B]">
            <div class="flex items-center gap-3">
              <%= icon_pin(width: 20, height: 20, stroke_width: 2, classes: "text-[#94A3B8]") %>
              <span><%= @job.location %></span>
            </div>
            <div class="flex items-center gap-3">
              <%= icon_calendar(width: 20, height: 20, stroke_width: 2, classes: "text-[#94A3B8]") %>
              <span>Applied
                <%= @job.applied_date.strftime("%B %d, %Y") %></span>
            </div>
            <div class="flex items-center gap-3">
              <%= icon_salary(width: 20, height: 20, stroke_width: 2, classes: "text-[#94A3B8]") %>
              <span class="font-semibold text-[#475569]"><%= @job.salary.present? ? @job.salary : "Not specified" %></span>
            </div>
          </div>

          <div class="mt-10 pt-8 border-t border-slate-50">
            <h4
              class="
                text-[#0F172A] font-bold mb-4 flex items-center gap-2 tracking-tight
              "
            >
              <%= icon_file(width: 18, height: 18, stroke_width: 2, classes: "text-slate-400") %>
              Job Description
            </h4>
            <div
              class="
                text-[#64748B] leading-relaxed max-w-4xl whitespace-pre-line text-[15px]
              "
            >
              <%= @job.description %>
            </div>
          </div>
        </div>
        <%= button_to archive_job_path(@job), method: :patch, 
      class: "flex items-center gap-2 px-5 py-2.5 rounded-xl text-sm font-bold border transition-all 
      #{@job.archived ? 'bg-amber-50 text-amber-700 border-amber-200 hover:bg-amber-100' : 'bg-white text-[#64748B] border-[#E2E8F0] hover:bg-slate-50'}" do %>
          <%= icon_archive(width: 16, height: 16, stroke_width: 2) %>
          <%= @job.archived ? "Unarchive" : "Archive" %>
        <% end %>
        <%= link_to edit_job_path(@job), class: "bg-[#0F172A] text-white px-5 py-2.5 rounded-xl text-sm font-bold flex items-center gap-2 hover:bg-black transition-all shadow-lg shadow-slate-200" do %>
          <%= icon_edit(width: 14, height: 14, stroke_width: 2.5) %>
          Edit Job
        <% end %>
      </div>
    </div>

    <%# The Two-Column Grid %>
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 items-start">

      <%# Column 1: Contacts %>
      <div class="bg-white border border-[#F1F5F9] rounded-[24px] p-8 shadow-sm">
        <div class="flex justify-between items-center mb-8">
          <h3 class="text-2xl font-bold text-[#0F172A] tracking-tight">Contacts</h3>
          <%= link_to new_job_contact_path(@job), data: { turbo_frame: "modal" }, class: "bg-[#F1F5F9] text-[#0F172A] hover:bg-[#E2E8F0] px-4 py-2 rounded-xl text-sm font-bold transition-colors" do %>
            + Add Contact
          <% end %>
        </div>

        <div class="space-y-4">
          <% if @job.contacts.any? %>
            <% @job.contacts.each do |contact| %>
              <div
                class="
                  border border-[#F1F5F9] rounded-2xl p-6 relative group bg-white
                  hover:border-slate-200 hover:shadow-sm transition-all
                "
              >
                <div class="flex justify-between items-start">
                  <div>
                    <p class="font-bold text-[#0F172A]"><%= contact.name %></p>
                    <p class="text-sm text-[#64748B] font-medium"><%= contact.role %></p>
                    <div class="flex items-center gap-2 mt-3 text-[#94A3B8]">
                      <%= icon_mail(width: 14, height: 14, stroke_width: 2) %>
                      <span class="text-xs italic font-medium"><%= contact.email %></span>
                    </div>
                  </div>

                  <div class="flex gap-1 opacity-0 group-hover:opacity-100 transition-opacity">
                    <%= link_to edit_job_contact_path(@job, contact), data: { turbo_frame: "modal" }, class: "p-2 text-[#94A3B8] hover:text-blue-600 hover:bg-blue-50 rounded-lg transition-all" do %>
                      <%= icon_edit_full(width: 18, height: 18, stroke_width: 2) %>
                    <% end %>
                    <%= link_to job_contact_path(@job, contact), data: { turbo_method: :delete, turbo_confirm: "Delete this contact?" }, class: "p-2 text-[#94A3B8] hover:text-red-600 hover:bg-red-50 rounded-lg transition-all" do %>
                      <%= icon_trash(width: 18, height: 18, stroke_width: 2) %>
                    <% end %>
                  </div>
                </div>
              </div>
            <% end %>
          <% else %>
            <div
              class="
                text-center py-10 border-2 border-dashed border-slate-100 rounded-3xl
              "
            >
              <p class="text-slate-400 italic text-sm">No contacts added yet.</p>
            </div>
          <% end %>
        </div>
      </div>

      <%# Column 2: Timeline & Events %>
      <div class="bg-white border border-[#F1F5F9] rounded-[24px] p-8 shadow-sm">
        <div class="flex justify-between items-center mb-8">
          <h3 class="text-2xl font-bold text-[#0F172A] tracking-tight">Timeline</h3>
          <%= link_to new_job_event_path(@job), data: { turbo_frame: "modal" }, class: "bg-[#F1F5F9] text-[#0F172A] hover:bg-[#E2E8F0] px-4 py-2 rounded-xl text-sm font-bold transition-colors" do %>
            + Add Event
          <% end %>
        </div>

        <div
          class="
            space-y-8 relative before:absolute before:inset-0 before:ml-5
            before:-translate-x-px before:h-full before:w-0.5 before:bg-[#F1F5F9]
          "
        >
          <% if @job.events.any? %>
            <% @job.events.order(event_date: :desc).each do |event| %>
              <div
                class="
                  relative flex items-start justify-between group pl-12 mb-8 last:mb-0
                "
              >
                <%# Icon Circle %>
                <div
                  class="
                    absolute left-0 grid place-items-center w-10 h-10 bg-white border-2
                    border-[#E2E8F0] text-[#64748B] rounded-full shadow-sm z-10
                    group-hover:border-blue-500 transition-colors
                  "
                >
                  <%= icon_clock(width: 16, height: 16, stroke_width: 2) %>
                </div>

                <div class="flex-grow">
                  <div class="flex justify-between items-start">
                    <div>
                      <p class="font-bold text-[#0F172A]"><%= event.event_type %></p>
                      <p class="text-xs text-[#94A3B8] font-bold uppercase tracking-tighter"><%= event.event_date.strftime("%B %d, %Y") %></p>
                    </div>

                    <div
                      class="
                        flex gap-1 opacity-0 group-hover:opacity-100 transition-opacity ml-4
                      "
                    >
                      <%= link_to edit_job_event_path(@job, event), data: { turbo_frame: "modal" }, class: "p-2 text-[#94A3B8] hover:text-blue-600 hover:bg-blue-50 rounded-lg transition-all" do %>
                        <%= icon_edit(width: 16, height: 16, stroke_width: 2) %>
                      <% end %>
                      <%= link_to job_event_path(@job, event), data: { turbo_method: :delete, turbo_confirm: "Remove this event?" }, class: "p-2 text-[#94A3B8] hover:text-red-600 hover:bg-red-50 rounded-lg transition-all" do %>
                        <%= icon_trash_simple(width: 16, height: 16, stroke_width: 2) %>
                      <% end %>
                    </div>
                  </div>

                  <% if event.notes.present? %>
                    <div
                      class="
                        text-sm text-[#64748B] mt-3 bg-slate-50 p-4 rounded-xl border border-slate-100
                        leading-relaxed italic
                      "
                    >
                      "<%= event.notes %>"
                    </div>
                  <% end %>
                </div>
              </div>
            <% end %>
          <% else %>
            <div class="text-center py-10 pl-8">
              <p class="text-slate-400 italic text-sm">No timeline events recorded.</p>
            </div>
          <% end %>
        </div>
      </div>
    </div>
    <%# Danger Zone Section %>
    <div class=" mt-12 pt-8 border-t-2 border-dashed border-slate-200 ">
      <div
        class="
          flex flex-col md:flex-row justify-between items-center bg-rose-50/50 rounded-3xl
          p-8 border border-rose-100
        "
      >
        <div>
          <h3 class="text-lg font-bold text-rose-800">Danger Zone</h3>
          <p class="text-sm text-rose-600 font-medium">Permanently delete this application and all associated data.</p>
        </div>

        <div class="mt-4 md:mt-0">
          <%= link_to job_path(@job), 
              data: { turbo_method: :delete, turbo_confirm: "Are you sure? This action cannot be undone." }, 
              class: "flex items-center gap-2 px-6 py-3 rounded-xl text-sm font-bold bg-white text-rose-600 border border-rose-200 hover:bg-rose-600 hover:text-white transition-all shadow-sm" do %>
            <%= icon_trash(width: 16, height: 16, stroke_width: 2) %>
            Delete Application
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
