<div class="min-h-screen bg-[#F8FAFC] p-8 md:p-12">
  <div class="max-w-7xl mx-auto">
    <%# Back Navigation %>
    <%= link_to jobs_path, class: "flex items-center gap-2 text-[#64748B] hover:text-[#0F172A] mb-6 transition-all group" do %>
      <svg
        xmlns="http://www.w3.org/2000/svg"
        width="20"
        height="20"
        viewBox="0 0 24 24"
        fill="none"
        stroke="currentColor"
        stroke-width="2.5"
        stroke-linecap="round"
        stroke-linejoin="round"
        class="group-hover:-translate-x-1 transition-transform"
      ><line x1="19" y1="12" x2="5" y2="12"/><polyline points="12 19 5 12 12 5"/></svg>
      <span class="text-2xl font-bold text-[#0F172A]">Job Application Details</span>
    <% end %>

    <%# Main Info Card %>
    <div
      class="
        bg-white border border-[#F1F5F9] rounded-[24px] p-10 mb-8 shadow-sm relative
      "
    >
      <div class="flex justify-between items-start">
        <div>
          <div class="flex items-center gap-3 mb-2">
            <h2 class="text-3xl font-bold text-[#0F172A]"><%= @job.title %></h2>
            <span
              class="
                bg-[#3B82F6] text-white text-[10px] font-black uppercase tracking-wider px-3
                py-1 rounded-lg
              "
            >
              <%= @job.status %>
            </span>
          </div>
          <p class="text-xl text-[#64748B] mb-8"><%= @job.company %></p>
          <div class="grid grid-cols-1 md:grid-cols-3 gap-y-6 gap-x-8 text-[#64748B]">
            <div class="flex items-center gap-3">
              <svg
                xmlns="http://www.w3.org/2000/svg"
                width="20"
                height="20"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
                stroke-linecap="round"
                stroke-linejoin="round"
                class="text-[#94A3B8]"
              ><path d="M20 10c0 6-8 12-8 12s-8-6-8-12a8 8 0 0 1 16 0Z"/><circle cx="12" cy="10" r="3"/></svg>
              <span><%= @job.location %></span>
            </div>
            <div class="flex items-center gap-3">
              <svg
                xmlns="http://www.w3.org/2000/svg"
                width="20"
                height="20"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
                stroke-linecap="round"
                stroke-linejoin="round"
                class="text-[#94A3B8]"
              ><rect width="18" height="18" x="3" y="4" rx="2" ry="2"/><line x1="16" x1="16" y1="2" y2="6"/><line x1="8" x1="8" y1="2" y2="6"/><line x1="3" x1="10" y1="10" y2="10"/></svg>
              <span>Applied
                <%= @job.applied_date.strftime("%Y-%m-%d") %></span>
            </div>
            <div class="flex items-center gap-3">
              <svg
                xmlns="http://www.w3.org/2000/svg"
                width="20"
                height="20"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
                stroke-linecap="round"
                stroke-linejoin="round"
                class="text-[#94A3B8]"
              ><line x1="12" x1="12" y1="2" y2="22"/><path d="M17 5H9.5a3.5 3.5 0 0 0 0 7h5a3.5 3.5 0 0 1 0 7H6"/></svg>
              <span class="font-semibold text-[#475569]"><%= @job.salary.present? ? @job.salary : "Not specified" %></span>
            </div>
          </div>
          <div class="mt-8">
            <h4 class="flex items-center gap-2 text-[#0F172A] font-bold mb-3 italic">Description</h4>
            <p class="text-[#64748B] leading-relaxed"><%= @job.description %></p>
          </div>
        </div>
        <%= link_to edit_job_path(@job), class: "bg-[#0F172A] text-white px-4 py-2 rounded-xl text-sm font-bold" do %>Edit<% end %>
      </div>
    </div>

    <%# The Two-Column Grid %>
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 items-start">

      <%# Column 1: Contacts %>
      <div class="bg-white border border-[#F1F5F9] rounded-[24px] p-8 shadow-sm">
        <div class="flex justify-between items-center mb-8">
          <h3 class="text-2xl font-bold text-[#0F172A]">Contacts</h3>
          <%= link_to new_job_contact_path(@job), data: { turbo_frame: "modal" }, class: "bg-black text-white px-4 py-2 rounded-xl text-sm font-bold" do %>
            + Add Contact
          <% end %>
        </div>

        <div class="space-y-4">
          <% if @job.contacts.any? %>
            <% @job.contacts.each do |contact| %>
              <div
                class="
                  border border-[#F1F5F9] rounded-2xl p-6 relative group bg-white
                  hover:border-slate-200 transition-all
                "
              >
                <div class="flex justify-between items-start">
                  <div>
                    <p class="font-bold text-[#0F172A]"><%= contact.name %></p>
                    <p class="text-sm text-[#64748B]"><%= contact.role %></p>
                    <p class="text-sm text-[#94A3B8] mt-2 italic"><%= contact.email %></p>
                  </div>

                  <%# Action Buttons %>
                  <div class="flex gap-2 opacity-0 group-hover:opacity-100 transition-opacity">
                    <%= link_to edit_job_contact_path(@job, contact), data: { turbo_frame: "modal" }, class: "p-2 text-[#94A3B8] hover:text-blue-600 hover:bg-blue-50 rounded-lg transition-all" do %>
                      <svg
                        xmlns="http://www.w3.org/2000/svg"
                        width="18"
                        height="18"
                        viewBox="0 0 24 24"
                        fill="none"
                        stroke="currentColor"
                        stroke-width="2"
                        stroke-linecap="round"
                        stroke-linejoin="round"
                      ><path d="M17 3a2.85 2.83 0 1 1 4 4L7.5 20.5 2 22l1.5-5.5Z"/><path d="m15 5 4 4"/></svg>
                    <% end %>
                    <%= link_to job_contact_path(@job, contact), data: { turbo_method: :delete, turbo_confirm: "Delete this contact?" }, class: "p-2 text-[#94A3B8] hover:text-red-600 hover:bg-red-50 rounded-lg transition-all" do %>
                      <svg
                        xmlns="http://www.w3.org/2000/svg"
                        width="18"
                        height="18"
                        viewBox="0 0 24 24"
                        fill="none"
                        stroke="currentColor"
                        stroke-width="2"
                        stroke-linecap="round"
                        stroke-linejoin="round"
                      ><path d="M3 6h18"/><path d="M19 6v14c0 1-1 2-2 2H7c-1 0-2-1-2-2V6"/><path d="M8 6V4c0-1 1-2 2-2h4c1 0 2 1 2 2v2"/><line x1="10" x2="10" y1="11" y2="17"/><line x1="14" x2="14" y1="11" y2="17"/></svg>
                    <% end %>
                  </div>
                </div>
              </div>
            <% end %>
          <% else %>
            <p
              class="
                text-center text-gray-400 py-4 italic border-2 border-dashed border-slate-100
                rounded-2xl
              "
            >No contacts yet.</p>
          <% end %>
        </div>
      </div>

      <%# Column 2: Timeline & Results %>
      <div class="bg-white border border-[#F1F5F9] rounded-[24px] p-8 shadow-sm">
        <div class="flex justify-between items-center mb-8">
          <h3 class="text-2xl font-bold text-[#0F172A]">Timeline & Results</h3>
          <%= link_to new_job_event_path(@job), data: { turbo_frame: "modal" }, class: "bg-black text-white px-4 py-2 rounded-xl text-sm font-bold flex items-center gap-2" do %>
            <span class="text-lg">+</span>
            Add Event
          <% end %>
        </div>

        <div
          class="
            space-y-8 relative before:absolute before:inset-0 before:ml-5
            before:-translate-x-px before:h-full before:w-0.5 before:bg-[#F1F5F9]
          "
        >
          <% if @job.events.any? %>
            <% @job.events.order(event_date: :desc).each do |event| %>
              <div
                class="
                  relative flex items-start justify-between group pl-12 mb-8 last:mb-0
                "
              >
                <%# Icon Circle %>
                <div
                  class="
                    absolute left-0 grid place-items-center w-10 h-10 bg-white border-2
                    border-[#E2E8F0] text-[#64748B] rounded-full shadow-sm z-10
                    group-hover:border-blue-500 transition-colors
                  "
                >
                  <svg
                    xmlns="http://www.w3.org/2000/svg"
                    width="16"
                    height="16"
                    viewBox="0 0 24 24"
                    fill="none"
                    stroke="currentColor"
                    stroke-width="2"
                    stroke-linecap="round"
                    stroke-linejoin="round"
                  ><rect width="18" height="18" x="3" y="4" rx="2" ry="2"/><line x1="16" x1="16" y1="2" y2="6"/><line x1="8" x1="8" y1="2" y2="6"/><line x1="3" x1="10" y1="10" y2="10"/></svg>
                </div>

                <div class="flex-grow">
                  <div class="flex justify-between items-start">
                    <div>
                      <p class="font-bold text-[#0F172A]"><%= event.event_type %></p>
                      <p class="text-xs text-[#94A3B8] font-medium"><%= event.event_date.strftime("%B %d, %Y") %></p>
                    </div>

                    <%# Action Buttons %>
                    <div
                      class="
                        flex gap-2 opacity-0 group-hover:opacity-100 transition-opacity ml-4
                      "
                    >
                      <%= link_to edit_job_event_path(@job, event), data: { turbo_frame: "modal" }, class: "p-2 text-[#94A3B8] hover:text-blue-600 hover:bg-blue-50 rounded-lg transition-all" do %>
                        <svg
                          xmlns="http://www.w3.org/2000/svg"
                          width="18"
                          height="18"
                          viewBox="0 0 24 24"
                          fill="none"
                          stroke="currentColor"
                          stroke-width="2"
                          stroke-linecap="round"
                          stroke-linejoin="round"
                        ><path d="M17 3a2.85 2.83 0 1 1 4 4L7.5 20.5 2 22l1.5-5.5Z"/><path d="m15 5 4 4"/></svg>
                      <% end %>
                      <%= link_to job_event_path(@job, event), data: { turbo_method: :delete, turbo_confirm: "Remove this event?" }, class: "p-2 text-[#94A3B8] hover:text-red-600 hover:bg-red-50 rounded-lg transition-all" do %>
                        <svg
                          xmlns="http://www.w3.org/2000/svg"
                          width="18"
                          height="18"
                          viewBox="0 0 24 24"
                          fill="none"
                          stroke="currentColor"
                          stroke-width="2"
                          stroke-linecap="round"
                          stroke-linejoin="round"
                        ><path d="M3 6h18"/><path d="M19 6v14c0 1-1 2-2 2H7c-1 0-2-1-2-2V6"/><path d="M8 6V4c0-1 1-2 2-2h4c1 0 2 1 2 2v2"/><line x1="10" x2="10" y1="11" y2="17"/><line x1="14" x2="14" y1="11" y2="17"/></svg>
                      <% end %>
                    </div>
                  </div>

                  <% if event.notes.present? %>
                    <p
                      class="
                        text-sm text-[#64748B] mt-2 bg-slate-50 p-3 rounded-lg border border-slate-100
                      "
                    ><%= event.notes %></p>
                  <% end %>
                </div>
              </div>
            <% end %>
          <% else %>
            <p class="text-center text-gray-400 py-4 italic pl-8">No events recorded yet.</p>
          <% end %>
        </div>
      </div>

    </div><%# End Grid %>
  </div><%# End Max-Width %>
</div><%# End Bg Wrapper %>
