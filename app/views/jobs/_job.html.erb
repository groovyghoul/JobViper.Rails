<div id="<%= dom_id job %>" class="w-full sm:w-auto my-5 space-y-5">
  <div>
    <strong class="block font-medium mb-1">Company:</strong>
    <%= job.company %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Title:</strong>
    <%= job.title %>
  </div>
  <div>
    <strong class="block font-medium mb-1">Applied date:</strong>
    <%= job.applied_date %>
  </div>
  <p class="my-5">
    <strong class="block font-medium mb-1 text-gray-700">Status:</strong>
    <% badge_classes =
      case job.status&.downcase
      when "interviewing"
        "bg-indigo-100 text-indigo-700 border-indigo-200"
      when "offer"
        "bg-green-100 text-green-700 border-green-200"
      when "rejected"
        "bg-red-100 text-red-700 border-red-200"
      when "applied"
        "bg-blue-100 text-blue-700 border-blue-200"
      else
        "bg-gray-100 text-gray-700 border-gray-200"
      end %>
    <span
      class="
        px-3 py-1 rounded-full text-xs font-semibold border
        <%= badge_classes %>
      "
    >
      <%= job.status || "Unknown" %>
    </span>
  </p>
  <div>
    <strong class="block font-medium mb-1">Source:</strong>
    <%= job.source %>
  </div>
</div>
