<%= form_with(model: job, class: "contents") do |form| %>
  <% if job.errors.any? %>
    <div
      id="error_explanation"
      class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-md mt-3"
    >
      <h2><%= pluralize(job.errors.count, "error") %>
        prohibited this job from being saved:</h2>

      <ul class="list-disc ml-6">
        <% job.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="my-5">
    <%= form.label :company %>
    <%= form.text_field :company,
                    class: [
                      "block shadow-sm rounded-md border px-3 py-2 mt-2 w-full",
                      {
                        "border-gray-400 focus:outline-blue-600":
                          job.errors[:company].none?,
                        "border-red-400 focus:outline-red-600":
                          job.errors[:company].any?,
                      },
                    ] %>
  </div>

  <div class="my-5">
    <%= form.label :title %>
    <%= form.text_field :title,
                    class: [
                      "block shadow-sm rounded-md border px-3 py-2 mt-2 w-full",
                      {
                        "border-gray-400 focus:outline-blue-600":
                          job.errors[:title].none?,
                        "border-red-400 focus:outline-red-600":
                          job.errors[:title].any?,
                      },
                    ] %>
  </div>

  <div class="my-5">
    <%= form.label :applied_date %>
    <%= form.date_field :applied_date,
                    value: (form.object.applied_date || Date.today),
                    class:
                      "block shadow-sm rounded-md border px-3 py-2 mt-2 w-full border-gray-400 focus:outline-blue-600" %>
  </div>

  <div class="my-5">
    <%= form.label :status %>
    <%= form.select :status,
                [
                  "To Apply",
                  "Applied",
                  "Interviewing",
                  "Offer Received",
                  "Accepted",
                  "Rejected",
                  "Ghosted",
                ],
                { prompt: "-- Select current stage --" },
                {
                  class:
                    "block shadow-sm rounded-md border px-3 py-2 mt-2 w-full border-gray-400 focus:outline-blue-600",
                } %>
  </div>

  <div class="my-5">
    <%= form.label :source, "Where did you find this?" %>
    <%= form.select :source,
                [
                  "LinkedIn",
                  "Indeed",
                  "Glassdoor",
                  "Company Website",
                  "Referral",
                  "Recruiter",
                  "Other",
                ],
                { prompt: "-- Select source --" },
                {
                  class:
                    "block shadow-sm rounded-md border px-3 py-2 mt-2 w-full border-gray-400 focus:outline-blue-600",
                } %>
  </div>

  <div class="inline">
    <%= form.submit class:
                  "w-full sm:w-auto rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white inline-block font-medium cursor-pointer" %>
  </div>
<% end %>
