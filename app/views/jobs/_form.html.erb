<%= form_with(model: job, class: "contents") do |form| %>
  <div class="grid grid-cols-1 md:grid-cols-2 gap-x-8 gap-y-6">

    <%# Company Name %>
    <div class="flex flex-col gap-2">
      <%= form.label :company, "Company Name *", class: "font-bold text-[#0F172A]" %>
      <%= form.text_field :company,
                      class:
                        "bg-[#F1F5F9] border-none rounded-xl p-4 focus:ring-2 focus:ring-blue-500",
                      placeholder: "e.g. Google" %>
    </div>

    <%# Position %>
    <div class="flex flex-col gap-2">
      <%= form.label :title, "Position *", class: "font-bold text-[#0F172A]" %>
      <%= form.text_field :title,
                      class:
                        "bg-[#F1F5F9] border-none rounded-xl p-4 focus:ring-2 focus:ring-blue-500",
                      placeholder: "e.g. Software Engineer" %>
    </div>

    <%# Status %>
    <div class="flex flex-col gap-2">
      <%= form.label :status, "Status *", class: "font-bold text-[#0F172A]" %>
      <%= form.select :status,
                  %w[Applied Interviewing Offer Rejected],
                  {},
                  class:
                    "bg-[#F1F5F9] border-none rounded-xl p-4 focus:ring-2 focus:ring-blue-500 appearance-none" %>
    </div>

    <%# Date Applied %>
    <div class="flex flex-col gap-2">
      <%= form.label :applied_date, "Date Applied *", class: "font-bold text-[#0F172A]" %>
      <%= form.date_field :applied_date,
                      value: Time.now.strftime("%Y-%m-%d"),
                      class:
                        "bg-[#F1F5F9] border-none rounded-xl p-4 focus:ring-2 focus:ring-blue-500" %>
    </div>

    <%# Location %>
    <div class="flex flex-col gap-2">
      <%= form.label :location, "Location", class: "font-bold text-[#0F172A]" %>
      <%= form.text_field :location,
                      class:
                        "bg-[#F1F5F9] border-none rounded-xl p-4 focus:ring-2 focus:ring-blue-500",
                      placeholder: "e.g. Remote, NYC" %>
    </div>

    <%# Salary %>
    <div class="flex flex-col gap-2">
      <%= form.label :salary, "Salary Range", class: "font-bold text-[#0F172A]" %>
      <%= form.text_field :salary,
                      class:
                        "bg-[#F1F5F9] border-none rounded-xl p-4 focus:ring-2 focus:ring-blue-500",
                      placeholder: "e.g. $80k - $100k" %>
    </div>

    <%# Description / Notes - Full Width %>
    <div class="flex flex-col gap-2 md:col-span-2">
      <%= form.label :description,
                 "Description / Notes",
                 class: "font-bold text-[#0F172A]" %>
      <%= form.text_area :description,
                     rows: 4,
                     class:
                       "bg-[#F1F5F9] border-none rounded-xl p-4 focus:ring-2 focus:ring-blue-500",
                     placeholder: "Add any relevant details..." %>
    </div>
  </div>

  <%# Form Actions %>
  <div class="flex justify-end gap-4 mt-10">
    <%= link_to "Cancel",
    jobs_path,
    class:
      "px-8 py-3 rounded-xl font-bold border border-[#E2E8F0] text-[#64748B] hover:bg-gray-50 transition-all" %>
    <%= form.submit "Save Application",
                class:
                  "px-8 py-3 rounded-xl font-bold bg-[#020617] text-white hover:bg-black cursor-pointer shadow-sm transition-all" %>
  </div>
<% end %>
