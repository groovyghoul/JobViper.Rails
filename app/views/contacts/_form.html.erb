<%= form_with(model: contact, class: "contents") do |form| %>
  <% if contact.errors.any? %>
    <div
      id="error_explanation"
      class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-md mt-3"
    >
      <h2><%= pluralize(contact.errors.count, "error") %>
        prohibited this contact from being saved:</h2>

      <ul class="list-disc ml-6">
        <% contact.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%# We use a hidden field because the user doesn't need to see or edit the ID number %>
  <%= form.hidden_field :job_id, value: params[:job_id] || contact.job_id %>

  <% if contact.job_id || params[:job_id] %>
    <div class="my-5">
      <p class="text-sm text-gray-500 italic">
        Adding contact for:
        <strong><%= Job.find(params[:job_id] || contact.job_id).company %></strong>
      </p>
    </div>
  <% else %>
    <div class="my-5">
      <%= form.label :job_id, "Select Job" %>
      <%= form.collection_select :job_id,
                             Job.all,
                             :id,
                             :company,
                             { prompt: "Select a Company" },
                             {
                               class:
                                 "block shadow-sm rounded-md border px-3 py-2 mt-2 w-full border-gray-400",
                             } %>
    </div>
  <% end %>

  <div class="my-5">
    <%= form.label :date %>
    <%= form.date_field :date,
                    class: [
                      "block shadow-sm rounded-md border px-3 py-2 mt-2 w-full",
                      {
                        "border-gray-400 focus:outline-blue-600":
                          contact.errors[:date].none?,
                        "border-red-400 focus:outline-red-600":
                          contact.errors[:date].any?,
                      },
                    ] %>
  </div>

  <div class="my-5">
    <%= form.label :contact_type %>
    <%= form.text_field :contact_type,
                    class: [
                      "block shadow-sm rounded-md border px-3 py-2 mt-2 w-full",
                      {
                        "border-gray-400 focus:outline-blue-600":
                          contact.errors[:contact_type].none?,
                        "border-red-400 focus:outline-red-600":
                          contact.errors[:contact_type].any?,
                      },
                    ] %>
  </div>

  <div class="my-5">
    <%= form.label :person %>
    <%= form.text_field :person,
                    class: [
                      "block shadow-sm rounded-md border px-3 py-2 mt-2 w-full",
                      {
                        "border-gray-400 focus:outline-blue-600":
                          contact.errors[:person].none?,
                        "border-red-400 focus:outline-red-600":
                          contact.errors[:person].any?,
                      },
                    ] %>
  </div>

  <div class="my-5">
    <%= form.label :notes %>
    <%= form.textarea :notes,
                  rows: 4,
                  class: [
                    "block shadow-sm rounded-md border px-3 py-2 mt-2 w-full",
                    {
                      "border-gray-400 focus:outline-blue-600":
                        contact.errors[:notes].none?,
                      "border-red-400 focus:outline-red-600":
                        contact.errors[:notes].any?,
                    },
                  ] %>
  </div>

  <div class="inline">
    <%= form.submit class:
                  "w-full sm:w-auto rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white inline-block font-medium cursor-pointer" %>
  </div>
<% end %>
